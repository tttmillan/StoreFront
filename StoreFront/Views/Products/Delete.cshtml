@model StoreFront.DATA.EF.Product

@{
    ViewBag.Title = "Delete";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h3 style="text-align:center; padding-top:3em;">Are you sure you want to delete this?</h3>

        <div class="form-horizontal">

            <div class="col-md-6">
                <strong style="font-size:xx-large">@Html.DisplayNameFor(model => model.ProductName)</strong>
            </div>
            <div class="col-md-6">
                <p style="font-size:x-large">@Html.DisplayFor(model => model.ProductName)</p>
            </div>

            <div class="col-md-6">
                <strong style="font-size:xx-large"> @Html.DisplayNameFor(model => model.Price)</strong>
            </div>
            <div class="col-md-6">
                <p style="font-size:x-large"> @Html.DisplayFor(model => model.Price)</p>
            </div>

            <div class="col-md-6">
                <strong style="font-size:xx-large">@Html.DisplayNameFor(model => model.Brand.BrandName)</strong>
            </div>
            <div class="col-md-6">
                <p style="font-size:x-large">@Html.DisplayFor(model => model.Brand.BrandName)</p>
            </div>

            <div class="col-md-6">
                <strong style="font-size:xx-large">@Html.DisplayNameFor(model => model.ProductType.TypeName)</strong>
            </div>
            <div class="col-md-6">
                <p style="font-size:x-large"> @Html.DisplayFor(model => model.ProductType.TypeName)</p>
            </div>

        </div>


        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Delete" class="btn btn-outline-danger" />
            </div>
        </div>

    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary" })
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}