@model StoreFront.DATA.EF.Color

@using (Html.BeginForm("AjaxEdit", "Colors", FormMethod.Post, new { id = "ColorEditForm" }))
{
    @Html.AntiForgeryToken()
    
    <table>
        <tr>
            @Html.HiddenFor(model => model.ColorID)
            <td>
                @Html.EditorFor(model => model.ColorName, new { htmlAttributes = new { @class = "form-control", style="width 400px;" } })
                @Html.ValidationMessageFor(model => model.ColorName, "", new { @class = "text-danger" })
            </td>
            <td>
                <input type="button" id="saveUpdate" value="Update Color" class="btn btn-primary" />
            </td>
        </tr>
    </table>
}


