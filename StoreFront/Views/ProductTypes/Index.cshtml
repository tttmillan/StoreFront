@model IEnumerable<StoreFront.DATA.EF.ProductType>

@{
    ViewBag.Title = "Product Type";
}

<h2 style="padding-top: 1em; text-align:center;">@ViewBag.Title</h2>

@if (User.IsInRole("Admin"))
{
    <p style="text-align:center;">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-outline-primary far fa-plus-square" })
    </p>
}
<div class="container">
    <table class="table data-table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TypeName)
                </th>
                @if (User.IsInRole("Admin"))
                {
                    <th></th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-6">
                        @Html.DisplayFor(modelItem => item.TypeName)
                    </td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td class="dt-body-right">
                            @Html.ActionLink("Edit", "Edit", new { id = item.TypeID }, new { @class = "btn btn-outline-warning far fa-edit" }) |
                            @*@Html.ActionLink("Details", "Details", new { id = item.TypeID }) |*@
                            @Html.ActionLink("Delete", "Delete", new { id = item.TypeID }, new { @class = "btn btn-outline-danger far fa-trash-alt" })
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        //Apply datatables plugin
        $(document).ready(function () {
            $(".data-table").DataTable();
        });
    </script>
}