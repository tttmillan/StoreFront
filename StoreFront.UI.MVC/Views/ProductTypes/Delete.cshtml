@model StoreFront.DATA.EF.ProductType

@{
    ViewBag.Title = "Delete";
}

@*<h2>Delete</h2>*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <h3 style="text-align:center; padding-top:3em;">Are you sure you want to delete this?</h3>
        @*<h4>ProductType</h4>*@
        @*<hr />*@
        <div class="form-horizontal">
            <div class="col-md-6">
                <b style="font-size:xx-large">@Html.DisplayNameFor(model => model.TypeName)</b>
            </div>
            <div class="col-md-6">
                <p style="font-size:x-large">@Html.DisplayFor(model => model.TypeName)</p>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6">
                <input type="submit" value="Delete" class="btn btn-outline-danger far fa-trash-alt" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary far fa-caret-square-left" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}